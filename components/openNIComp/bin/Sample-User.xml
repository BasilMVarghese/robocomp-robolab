<OpenNI>	
	<Log writeToConsole="true" writeToFile="false">
		<!-- 0 - Verbose, 1 - Info, 2 - Warning, 3 - Error (default) -->
		<LogLevel value="3"/>
		<Masks>
			<Mask name="ALL" on="false"/>
		</Masks>
	</Log>
	<ProductionNodes>		
		<GlobalMirror on="true"/>
		<Node type="Depth" name="MyDepth">
			<Configuration>				
				<MapOutputMode xRes="640" yRes="480" FPS="30"/> 
			</Configuration>
		</Node>
		<Node type="Image" name="MyImage">
			<Configuration>	
				<MapOutputMode xRes="640" yRes="480" FPS="30"/> 
			</Configuration>	
		</Node>
		<Node type="User" />
		
